<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anxmlns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2.5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2.5dp"
    anxmlns:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_album"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_album_default"
            app:riv_corner_radius="5dp"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/tv_name_album"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_album"
            android:maxLines="2"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/line"
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/tv_name_album"
            android:layout_below="@id/tv_name_album"
            android:layout_marginTop="5dp"
            android:background="@color/colorGrey" />

        <TextView
            android:id="@+id/tv_name_artist"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name_album"
            android:layout_below="@id/line"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="5dp"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/colorGrey" />

        <TextView
            android:id="@+id/tv_number_song"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name_album"
            android:layout_below="@id/tv_name_artist"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_song1"
            android:drawablePadding="5dp"
            android:textColor="@color/colorGrey" />

        <TextView
            android:id="@+id/tv_duration_total"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name_album"
            android:layout_below="@id/tv_number_song"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="5dp"
            android:textColor="@color/colorGrey" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_album"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_more" />
    </RelativeLayout>
</android.support.v7.widget.CardView>